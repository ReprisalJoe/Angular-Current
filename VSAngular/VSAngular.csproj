    <None Remove="ClientApp\.angular\cache\13.2.1\angular-webpack\5ab65f8172ba92a929afdd8808d8250d23a345d8\0.pack" />
    <None Remove="ClientApp\.angular\cache\13.2.1\angular-webpack\5ab65f8172ba92a929afdd8808d8250d23a345d8\index.pack" />
