    <None Remove="ClientApp\.angular\cache\13.2.1\angular-webpack\5c3de7f51cbf3d51c538f1cd19ed3ff1d7de4935\index.pack" />
    <None Remove="ClientApp\.angular\cache\13.2.1\babel-webpack\064188ff39239ee59d75b93db601b8ee.json" />
